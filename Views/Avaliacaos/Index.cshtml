@model IEnumerable<MenuEduca01.Models.Avaliacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Avaliações</h1>

<div class="row mt-5 mb-3">
    <div class="col-3">
        <a asp-action="Create" class="btn btn-adicionar btn-caramelo w-100">
            <i class="bi bi-plus-circle"></i> Adicionar
        </a>
    </div>

    <div class="col-9">
        <!-- Campo de Busca -->
        <form asp-action="Search" method="get" class="mb-3">
            <div class="input-group shadow-sm">
                <input type="text" name="searchTerm" class="form-control search-input" placeholder="Buscar..." />
                <button type="submit" class="btn search-btn">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuariosId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardapioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuariosId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardapioId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
