@model IEnumerable<MenuEduca01.Models.CadastroUsuario>

@{
    ViewData["Title"] = "Index";
}
<h2 class="display-6 text-center">Cadastro de Usuários</h2>

<div class="row mt-5 mb-3">
    <div class="col-3">
        <a asp-action="Create" class="btn btn-adicionar btn-caramelo w-100">
            <i class="bi bi-plus-circle"></i> Adicionar
        </a>
    </div>

    <div class="col-9">
        <!-- Campo de Busca -->
        <form asp-action="Search" method="get" class="mb-3">
            <div class="input-group shadow-sm">
                <input type="text" name="searchTerm" class="form-control search-input" placeholder="Buscar..." />
                <button type="submit" class="btn search-btn">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CadastroUsuarioId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CadastroUsuarioId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CadastroUsuarioId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
