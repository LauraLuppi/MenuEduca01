@model IEnumerable<MenuEduca01.Models.CadastroUsuario>

@{
    ViewData["Title"] = "Index";
}
<h2 class="display-6 text-center">Cadastro de Usuários</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CadastroUsuarioId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CadastroUsuarioId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CadastroUsuarioId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
